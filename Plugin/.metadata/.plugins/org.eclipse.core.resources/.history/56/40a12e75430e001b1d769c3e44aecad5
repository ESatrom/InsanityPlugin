			if(InsanityEnums.Modifiers.ROTTING_PRESERVATION.hasMod(p)) {
				
			}
			if(InsanityEnums.Modifiers.VULCANITE.hasMod(p)) {
				if(event.getCause().equals(DamageCause.FIRE)||event.getCause().equals(DamageCause.FIRE)) {
					
				}
			}
		}
	}
	
}
