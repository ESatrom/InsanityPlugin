package me.Minecraftmage113.InsanityPlugin;

import org.bukkit.ChatColor;
import org.bukkit.command.Command;
import org.bukkit.command.CommandSender;
import org.bukkit.entity.Player;
import org.bukkit.plugin.java.JavaPlugin;

public class Main extends JavaPlugin {

	@Override
	public void onEnable() {

	}

	@Override
	public void onDisable() {

	}

	public boolean onCommand(CommandSender sender, Command cmd, String label, String[] args) {
		switch (label.toLowerCase()) {
		case "hello":
			hello(sender, cmd, label.toLowerCase(), args);
			break;
		default:
			sender.sendMessage("Command not recognized.");
		}
		return false;
	}

	public boolean hello(CommandSender sender, Command cmd, String label, String[] args) {
		if (sender instanceof Player) {
			Player p = (Player) sender;
			if (p.hasPermission("hello.use")) {
				p.sendMessage(ChatColor.LIGHT_PURPLE + "Hello " + p.getDisplayName() + "!");
				p.sendMessage(ChatColor.translateAlternateColorCodes('§', "§ka§r§a Hi! §r§ka"));
			} else {
				p.sendMessage(ChatColor.DARK_RED + "No permissions for this command.");
			}
			return true;
		} else {
			sender.sendMessage("Hello console!");
			return true;
		}
	}

}
